[user]
	name = Arthur Malumian
	email = arthurmalumian@gmail.com
	signingkey = KEYID
[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
	autocrlf = input
	safecrlf = warn
[init]
	defaultBranch = main
[commit]
	gpgsign = true
	template = ~/.gitmessage.txt
[merge]
	tool = nvimdiff
	conflictstyle = diff3
[diff]
	tool = nvimdiff
[difftool]
	prompt = false
