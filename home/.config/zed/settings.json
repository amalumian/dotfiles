{
  // Languages
  "languages": {
    "JavaScript": {
      "inlay_hints": {
        "enabled": false,
      },
      "format_on_save": "on",
      "formatter": [
        {
          "code_action": "source.fixAll.eslint",
        },
        {
          "external": {
            "command": "prettier",
            "arguments": ["--stdin-filepath", "{buffer_path}"],
          },
        },
      ],
    },
    "TypeScript": {
      "inlay_hints": {
        "enabled": false,
      },
      "format_on_save": "on",
      "formatter": [
        {
          "code_action": "source.fixAll.eslint",
        },
        {
          "external": {
            "command": "prettier",
            "arguments": ["--stdin-filepath", "{buffer_path}"],
          },
        },
      ],
    },
    "TSX": {
      "inlay_hints": {
        "enabled": false,
      },
      "format_on_save": "on",
      "formatter": [
        {
          "code_action": "source.fixAll.eslint",
        },
        {
          "external": {
            "command": "prettier",
            "arguments": ["--stdin-filepath", "{buffer_path}"],
          },
        },
      ],
    },
  },
  // Keymap
  "base_keymap": "VSCode",
  // Editor
  "autosave": "off",
  "use_autoclose": false,
  // VIM
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "cursor_shape": {
      "insert": "block",
      "normal": "block",
      "replace": "block",
      "visual": "block",
    },
  },
  // UI
  "ui_font_family": ".ZedSans",
  "ui_font_size": 18,
  "buffer_font_family": ".ZedMono",
  "buffer_font_size": 18,
  "terminal": {
    "font_family": "MesloLGL Nerd Font Mono",
    "font_size": 16,
    "option_as_meta": true,
  },
  "relative_line_numbers": "enabled",
  "cursor_blink": true,
  "cursor_shape": "block",
  "theme": {
    "mode": "dark",
    "light": "Tokyo Night Moon",
    "dark": "Tokyo Night Moon",
  },
  "icon_theme": {
    "mode": "dark",
    "light": "Colored Zed Icons Theme Dark",
    "dark": "Colored Zed Icons Theme Dark",
  },
  "diagnostics": {
    "inline": {
      "enabled": true,
      "max_severity": "all",
    },
  },
  "tab_bar": {
    "show": false,
  },
  "scrollbar": {
    "show": "never",
  },
  "collaboration_panel": {
    "button": false,
  },
  // Extensions
  "auto_install_extensions": {
    "astro": true,
    "basher": true,
    "colored-zed-icons-theme": true,
    "dockerfile": true,
    "emmet": true,
    "git-firefly": true,
    "html": true,
    "latex": true,
    "lua": true,
    "make": true,
    "react-typescript-snippets": true,
    "scss": true,
    "sql": true,
    "tokyo-night": true,
    "toml": true,
  },
  // Telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  // AI
  // "disable_ai": true,
  "agent_servers": {
    "opencode": {
      "type": "registry",
    },
  },
  "edit_predictions": {
    "provider": "zed",
  },
}
