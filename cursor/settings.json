{
  "window.commandCenter": 1,
  "cursor.cpp.enablePartialAccepts": true,

  "window.zoomLevel": 3,

  "workbench.colorTheme": "Default Light+",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.revealIfOpen": true,

  "workbench.editor.showTabs": "single",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,

  "editor.fontSize": 14,
  "editor.fontFamily": "Iosevka Nerd Font Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "Iosevka Nerd Font Mono",
  "editor.fontLigatures": false,

  "editor.tabSize": 2,
  "editor.linkedEditing": true,
  "editor.cursorStyle": "block",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.formatOnSave": true,
  "workbench.sideBar.location": "right",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.renderWhitespace": "none",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always",
    "source.sortImports": "explicit"
  },

  "editor.rulers": [100],

  "git.enableCommitSigning": true,

  "vim.easymotion": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.incsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.leader": "<space>",
  "vim.normalModeKeyBindings": [
    // Centering
    { "before": ["<C-d>"], "after": ["<C-d>", "z", "z"] },
    { "before": ["<C-u>"], "after": ["<C-u>", "z", "z"] },
    { "before": ["n"], "after": ["n", "z", "z", "z", "v"] },
    { "before": ["N"], "after": ["N", "z", "z", "z", "v"] },
    // Hover
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    // LSP
    {
      "before": ["g", "r"],
      "commands": ["editor.action.referenceSearch.trigger"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["g", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    // Harpoon
    {
      "before": ["<C-e>"],
      "commands": ["vscode-harpoon.editEditors"]
    },
    {
      "before": ["<leader>", "<C-h>"],
      "commands": ["vscode-harpoon.addEditor1"]
    },
    {
      "before": ["<leader>", "<C-j>"],
      "commands": ["vscode-harpoon.addEditor2"]
    },
    {
      "before": ["<leader>", "<C-k>"],
      "commands": ["vscode-harpoon.addEditor3"]
    },
    {
      "before": ["<leader>", "<C-l>"],
      "commands": ["vscode-harpoon.addEditor4"]
    },
    {
      "before": ["<C-h>"],
      "commands": ["vscode-harpoon.gotoEditor1"]
    },
    {
      "before": ["<C-j>"],
      "commands": ["vscode-harpoon.gotoEditor2"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["vscode-harpoon.gotoEditor3"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["vscode-harpoon.gotoEditor4"]
    }
  ]
}
